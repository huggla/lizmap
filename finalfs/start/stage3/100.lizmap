# Set in stage2:
# ---------------------------------------------------------
# set -ef +am
# isFirstRun
# VAR_*
# All functions in /start/functions

if [ "$isFirstRun" == "true" ]
then
   sed -i "s|/var/log/nginx|$VAR_NGINX_LOG_DIR|g" "/etc/nginx/nginx.conf"
   sed -i "s|/var/run/nginx.pid|$VAR_NGINX_SOCKET_DIR/nginx.pid|" "/etc/nginx/nginx.conf"
   sed -i "s|server_name localhost|server_name $VAR_SERVER_NAME|" "/etc/nginx/conf.d/default.conf"
   if [ ! -s "$VAR_CONFIG_FILE" ] && [ "$VAR_CONFIG_FILE" != "/etc/nginx/nginx.conf" ]
   then
      mv "/etc/nginx/nginx.conf" "$VAR_CONFIG_FILE"
   fi
   if [ -z "$(ls -A "$VAR_CONFIG_DIR")" ] && [ "$VAR_CONFIG_DIR" != "/etc/nginx/conf.d" ]
   then
      mv /etc/nginx/conf.d/* "${VAR_CONFIG_DIR%/}/"
   fi
fi
